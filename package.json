{
  "name": "insta-cop",
  "version": "1.0.0",
  "description": "A Instagram",
  "main": "index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install && npm install",
    "build": "cd client && npm run build",
    "test": "cd routes && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hectorohernz/instagram.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hectorohernz/instagram/issues"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.0",
    "http-proxy-middleware": "^1.0.4",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.27.0",
    "mongoose": "^5.9.20",
    "multer": "^1.4.2",
    "validator": "^13.1.1"
  },
  "homepage": "https://github.com/hectorohernz/instagram#readme",
  "engines": {
    "node": "12.13.0",
    "npm": "6.14.4",
    "yarn": "0.27.5"
  }
}
